{
  "manifest_version": 3,
  "name": "Page Reader",
  "version": "0.1.0",
  "description": "Reads page structure and displays it in popup.",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content_script.js"]
    }
  ]
}