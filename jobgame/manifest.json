{
  "manifest_version": 3,
  "name": "Job Copilot Extension",
  "version": "0.1.0",
  "description": "Helps analyze job descriptions and suggest application content.",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab"
  ]
}
